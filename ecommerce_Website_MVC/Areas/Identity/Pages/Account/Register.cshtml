@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    /* General Page Styling */
    .container {
        max-width: 900px;
        margin: 0 auto;
        padding-top: 50px;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 30px;
    }

    section {
        background-color: #f9f9f9;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Form Styling */
    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        height: 45px;
        font-size: 1rem;
        border-radius: 4px;
        border: 1px solid #ddd;
        padding: 10px;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        font-size: 1.1rem;
        padding: 10px 20px;
        width: 100%;
        border-radius: 4px;
        border: none;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-link {
        font-size: 1rem;
        color: #007bff;
        text-decoration: none;
        transition: color 0.3s;
    }

    .btn-link:hover {
        color: #0056b3;
    }

    /* External Login Buttons */
    .btn-external {
        background-color: #ddd;
        color: #333;
        font-size: 1rem;
        padding: 10px 20px;
        margin-top: 10px;
        width: 100%;
        border-radius: 4px;
        border: none;
        transition: background-color 0.3s;
    }

    .btn-external:hover {
        background-color: #bbb;
    }

    /* Column Layout */
    .col-md-4 {
        margin-bottom: 30px;
    }


</style>

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <!-- Register Form Section -->
        <div class="col-md-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Create a new account</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <!-- Email Input -->
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password Input -->
                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password Input -->
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>

        <!-- External Login Section -->
        <div class="col-md-6">
            <section>
                <h4>Use another service to register.</h4>
                <hr />
                @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a> for details on setting up external services.</p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-external" name="provider" value="@provider.Name" title="Register using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
