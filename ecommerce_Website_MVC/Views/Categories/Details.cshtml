@model ecommerce_Website_MVC.Models.Categorie

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ecommerce_Website_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://kit.fontawesome.com/dad03e859c.js" crossorigin="anonymous"></script>
    <style>
        /* Style global pour la page */
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        /* Style de la section des détails */
        .details-section {
            padding: 50px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            margin: 30px auto;
            max-width: 800px;
        }

        /* Style du titre principal */
        h1 {
            font-size: 2.5rem;
            color: #333;
            text-align: center;
            margin-bottom: 30px;
        }

        /* Style de la description de la catégorie */
        .categorie-info dt {
            font-weight: bold;
            color: #333;
        }

        .categorie-info dd {
            color: #555;
            margin-bottom: 20px;
        }

        /* Style des liens de navigation */
        .action-links a {
            font-size: 1rem;
            font-weight: bold;
            color: #FF9800;
            margin-right: 10px;
            transition: color 0.3s ease;
        }

        .action-links a:hover {
            color: #FF5722;
        }

        .action-links {
            margin-top: 20px;
            text-align: center;
        }

        /* Séparateur ligne */
        hr {
            border-top: 1px solid #ddd;
            margin: 20px 0;
        }
    </style>
</head>
<body>

    <div class="details-section">
        <h1>Details</h1>

        <div class="categorie-info">
            <h4>Categorie</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.nomCategorie)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.nomCategorie)
                </dd>
            </dl>
        </div>

        <div class="action-links">
            <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-warning btn-sm">Edit</a> |
            <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
