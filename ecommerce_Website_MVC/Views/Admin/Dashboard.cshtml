@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    /* General styles */
    body {
        background-color: #f4f4f9;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    h1 {
        font-size: 2.5rem;
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    p {
        font-size: 1.1rem;
        color: #555;
        text-align: center;
        margin-bottom: 30px;
    }

    /* Card styles */
    .card {
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background-color: #fff;
        padding: 20px;
    }

    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .card-title {
        font-size: 1.6rem;
        color: #333;
        font-weight: 600;
    }

    .card-text {
        font-size: 1rem;
        color: #777;
        margin-top: 15px;
    }

    /* Button styles */
    .btn {
        display: inline-block;
        padding: 12px 20px;
        margin: 10px 0;
        font-size: 1rem;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        transform: scale(1.05);
    }

    .btn-success {
        background-color: #28a745;
        color: #fff;
    }

    .btn-success:hover {
        background-color: #218838;
        transform: scale(1.05);
    }

 
</style>

<div class="container mt-5">
    <h1>Dashboard Administrateur</h1>
    <p>Bienvenue, @User.Identity.Name !</p>

    <div class="row mt-4">
        <!-- Section Gestion des Produits -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Gérer les Produits</h5>
                    <p class="card-text">Ajouter, modifier ou supprimer des produits.</p>
                    <a asp-controller="Produits" asp-action="Index" class="btn btn-primary">Voir Produits</a>
                    <a asp-controller="Produits" asp-action="Create" class="btn btn-success">Ajouter un Produit</a>
                </div>
            </div>
        </div>

        <!-- Section Gestion des Catégories -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Gérer les Catégories</h5>
                    <p class="card-text">Ajouter, modifier ou supprimer des catégories.</p>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-primary">Voir Catégories</a>
                    <a asp-controller="Categories" asp-action="Create" class="btn btn-success">Ajouter une Catégorie</a>
                </div>
            </div>
        </div>
    </div>
</div>
