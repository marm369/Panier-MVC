@model IEnumerable<ecommerce_Website_MVC.Models.Produit>

@{
    ViewData["Title"] = "Produits";
}

<style>
    /* Section Styling */
    .section-p1 {
        padding: 60px 0;
        background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
    }

    h2 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
        text-align: center;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    p {
        font-size: 1.2rem;
        color: #666;
        text-align: center;
        margin-bottom: 30px;
    }

    .pro-container {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        justify-content: center;
        padding: 0 20px;
    }

    /* Product Card Styling */
    .pro {
        background-color: white;
        border-radius: 20px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        width: 270px;
        overflow: hidden;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        position: relative;
        margin-bottom: 30px;
    }

    .pro:hover {
        transform: translateY(-10px);
        box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.2);
    }

    .pro img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .pro:hover img {
        transform: scale(1.05);
    }

    .des {
        padding: 20px;
        text-align: center;
    }

    .des span {
        font-size: 1.4rem;
        font-weight: bold;
        color: #333;
        display: block;
        margin-bottom: 15px;
        text-transform: capitalize;
    }

    .des h5 {
        font-size: 1rem;
        color: #777;
        margin-bottom: 15px;
        font-family: 'Arial', sans-serif;
        font-style: italic;
    }

    .star i {
        color: #ff9800;
        font-size: 1.2rem;
    }

    .des h4 {
        font-size: 1.5rem;
        color: #f44336;
        font-weight: bold;
        margin-top: 20px;
        font-family: 'Roboto', sans-serif;
    }

    /* Quantity Input Styling */
    .input-group {
        margin: 20px 0;
        text-align: center;
    }

    .input-quantity {
        width: 70px;
        height: 35px;
        font-size: 1.2rem;
        text-align: center;
        border: none;
        border-radius: 10px;
        background-color: #f2f2f2;
        box-shadow: inset 0px 2px 5px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .input-quantity:focus {
        outline: none;
        background-color: #e0e0e0;
    }

    .cart {
        background-color: #3f51b5;
        color: white;
        border: none;
        padding: 12px;
        border-radius: 30px;
        width: 100%;
        cursor: pointer;
        font-size: 1.1rem;
        transition: background-color 0.3s ease-in-out;
    }

    .cart:hover {
        background-color: #1a237e;
    }

    .button-group {
        text-align: center;
        margin-top: 20px;
    }

    .btn-details {
        background-color: #009688;
        color: white;
        border: none;
        padding: 6px 10px;
        border-radius: 30px;
        font-size: 1.2rem;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
    }

    .btn-details:hover {
        background-color: #00796b;
    }

    .btn-details a {
        color: white;
        text-decoration: none;
    }

    /* Hover Effects for Buttons */
    .btn-details:hover a,
    .cart:hover a {
        text-decoration: none;
    }

</style>

<section id="product1" class="section-p1">
    <h2>Produits</h2>
    <div class="pro-container">
        @foreach (var item in Model)
        {
            <div class="pro">
                <img src="@item.imageUrl" alt="@item.nomProduit" />
                <div class="des">
                    <span>@item.nomProduit</span>
                    <h5>@item.description</h5>
                    <div class="star">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                    </div>
                    <h4>@item.prixProduit</h4>
                </div>
                <form method="post" asp-action="AddToCart" asp-controller="Achats">
                    <input type="hidden" name="ProductId" value="@item.id" />
                    <input type="hidden" name="idCategorie" value="@item.categorieId" />
                    <input type="hidden" name="page" value="0" />
                    <div class="input-group">
                        <label for="quantity">Quantité :</label>
                        <input type="number" name="quantitySelected" id="quantitySelected" value="1" min="1" max="@item.qteStock" class="input-quantity" />
                    </div>
                    <button type="submit" class="cart"><i class="fas fa-shopping-cart"></i> Ajouter au Panier</button>
                </form>
                <div class="button-group">
                    <button type="button" class="btn btn-details">
                        <a asp-controller="Produits" asp-action="Details" asp-route-productId="@item.id" class="btn btn-details">
                            <i class="fas fa-info-circle"></i> Détails
                        </a>
                    </button>
                </div>
            </div>
        }
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
